<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FBFAFA"
    android:orientation="vertical"
    tools:context=".It">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="30dp"
            app:cardMaxElevation="20dp"
            android:layout_gravity="center">

            <TextView
                android:id="@+id/headerit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="كلية تكنلوجيا المعلومات"
                android:textSize="40dp"
                android:textColor="@color/black"/>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

    <Space
        android:layout_width="match_parent"
        android:layout_height="40dp"
        />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="الاقسام"
        android:textSize="40dp"
        android:textColor="@color/black"
        android:layout_gravity="center"
        android:gravity="center"/>
    <Space
        android:layout_width="match_parent"
        android:layout_height="15dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            app:cardCornerRadius="30dp"
            app:cardMaxElevation="20dp"
            app:cardBackgroundColor="@color/teal_200"
            android:id="@+id/cardit1">

            <TextView
                android:id="@+id/it1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text=" علم الحاسوب"
                android:textColor="@color/black"
                android:textSize="40dp" />
        </androidx.cardview.widget.CardView>
    </LinearLayout>
    <Space
        android:layout_width="match_parent"
        android:layout_height="40dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            app:cardCornerRadius="30dp"
            app:cardMaxElevation="20dp"
            app:cardBackgroundColor="@color/teal_200"
            android:id="@+id/cardit2">

            <TextView
                android:id="@+id/it2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text=" هندسة البرمجيات"
                android:textColor="@color/black"
                android:textSize="40dp" />
        </androidx.cardview.widget.CardView>
    </LinearLayout>
    <Space
        android:layout_width="match_parent"
        android:layout_height="40dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            app:cardCornerRadius="30dp"
            app:cardMaxElevation="20dp"
            app:cardBackgroundColor="@color/teal_200"
            android:id="@+id/cardit3">

            <TextView
                android:id="@+id/it3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="نظم المعلومات والشبكات"
                android:textColor="@color/black"
                android:textSize="40dp" />
        </androidx.cardview.widget.CardView>
    </LinearLayout>
    <Space
        android:layout_width="match_parent"
        android:layout_height="40dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            app:cardCornerRadius="30dp"
            app:cardMaxElevation="20dp"
            app:cardBackgroundColor="@color/teal_200"
            android:id="@+id/cardit4">

            <TextView
                android:id="@+id/it4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="الأمن السيبراني"
                android:textColor="@color/black"
                android:textSize="40dp" />
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</LinearLayout>